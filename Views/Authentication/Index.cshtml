@model WalletWebUtility.Models.MobileLogin

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MLWallet Web Utility Authentication</title>


    @Scripts.Render("~/bundles/jquery")
    @Styles.Render("~/Content/css")

</head>
<body>
    <div class="wrapper row-custom">
        <div class="position-relative header-wrapper">
            <div class="Authentication-header width-full">
                <div class="container-Authentication-header width-full text-center">
                    <a href="https://github.com/"> <img src="~/Content/mlhuillierlogo.png" alt="mlhuillierlogo" width="300" height="75"></a>
                </div>

            </div>
        </div>

        <div class="Authentication-main">
            <div class="Authentication-container">
                @using (Html.BeginForm("UserAuthentication", "Authentication", FormMethod.Post))
                {
                    <div class="Authentication-form-body mt-3">
                        <div class="Authentication-form-header">
                            <h5>Sign in to Wallet Web Utility</h5>
                        </div>

                        <div class="card " style="width: 18rem;">
                            <div class="card-body">
                                <label>Username</label>

                                @Html.TextBox("UserName", "", new { @class = "form-control", @id = "txtloginusername" })
                                @* <input type="text" name="name" value="" class="form-control" /> *@
                                <label style="margin-top:5%;">
                                    Password
                                    <a class="label-link" href="/password_reset">Forgot password?</a>
                                </label>
                                @Html.Password("Password", "", new { @class = "form-control", @id = "txtpassword" })

                                <input type="submit" name="name" value="Sign In" class="btn btn-success form-control" style="margin-top:5%;" />
                            </div>
                        </div>
                    </div>
                }


            </div>
        </div>

        @*  *@

    </div>
    @Scripts.Render("~/bundles/customScripts")
    @Scripts.Render("~/bundles/scripts")
</body>
</html>
