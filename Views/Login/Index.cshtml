<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MLWallet Web Utility Login</title>


    @Scripts.Render("~/bundles/jquery")
    @Styles.Render("~/Content/css")

</head>
<body>
    <div class="wrapper row-custom" >
        <div class="position-relative header-wrapper">
            <div class="login-header width-full">
                <div class="container-login-header width-full text-center">
                    <a href="https://github.com/"> <img src="~/Content/mlhuillierlogo.png" alt="mlhuillierlogo" width="300" height="75"></a>
                </div>

            </div>
        </div>
       
        <div class="login-main">
            <div class="login-container">
                @using (Html.BeginForm("Authentication", "Login", FormMethod.Post))
                {
                    <div class="login-form-body mt-3">
                        <div class="login-form-header">
                            <h5>Sign in to Wallet Web Utility</h5>
                        </div>

                        <div class="card " style="width: 18rem;">
                            <div class="card-body">
                                <label>Username</label>
                                <input type="text" name="name" value="" class="form-control" />
                                <label style="margin-top:5%;">
                                    Password
                                    <a class="label-link" href="/password_reset">Forgot password?</a>
                                </label>
                                <input type="text" name="name" value="" class="form-control" />
                               
                                <input type="submit" name="name" value="Sign In" class="btn btn-success form-control"  style="margin-top:5%;"/>
                            </div>
                        </div>
                    </div>
                }
               

            </div>
        </div>

        @*  *@

    </div>
    @Scripts.Render("~/bundles/customScripts")
    @Scripts.Render("~/bundles/scripts")
</body>
</html>
